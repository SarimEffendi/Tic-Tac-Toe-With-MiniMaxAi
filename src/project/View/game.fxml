<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.Controllers.GameController">
    <children>
        <GridPane fx:id="boardGridPane" alignment="CENTER" VBox.vgrow="ALWAYS">
        </GridPane>
        <Label text="Tic Tac Toe" />
        <Label fx:id="gameState" text="" />
        <HBox alignment="bottom_right" spacing="10">
            <Button fx:id="resetButton" disable="true" onAction="#resetBoard" text="Reset Game" />
            <Button fx:id="menuButton" disable="true" onAction="#toMenu" text="Back to Menu" />
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
